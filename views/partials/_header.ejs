<aside class="profile-sidebar">

  <!--Profile Picture slot-->
  <div class="profile-picture">
    <img src="$PLACEHOLDER$" alt="Profile Picture">
  </div>

  <!--Username text-->
  <h3 class="username">User <%= userId %></h3>

  <!--Three navigation buttons-->
  <nav class="profile-buttons">
    <button type="button" class="btn btn-primary" onclick="location.href='$YOUR-STORIES$'">Your Stories</button>
    <button type="button" class="btn btn-primary" onclick="location.href='$CONTRIBUTION-STORIES$'">Contribution Stories</button>
    <button type="button" class="btn btn-primary" onclick="location.href='$CREATE-STORY$'">Create Story</button>
  </nav>

</aside>

<!--$$$ means placeholder $$$-->
