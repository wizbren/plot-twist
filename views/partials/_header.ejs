<aside class="profile-sidebar">

  <!--Profile Picture slot-->
  <div class="profile-picture">
    <img src="$PLACEHOLDER$" alt="Profile Picture">
  </div>

  <!--Username text-->
  <h3 class="username">User <%= userId %></h3>

  <!--Three navigation buttons-->
  <nav class="profile-buttons">
    <button type="button" class="btn btn-primary" onclick="location.href='/stories/<%= userId %>'">Create</button>
    <button type="button" class="btn btn-primary" onclick="location.href='/stories/contribute'">Contribute</button>
    <button type="button" class="btn btn-primary" onclick="location.href='/stories/read'">Read</button>
  </nav>

</aside>